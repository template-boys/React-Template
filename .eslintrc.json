{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "semi": ["error", "always"],
      "curly": ["error", "all"],
      "comma-dangle": "off",
      "space-before-function-paren": "off",
      "react/prop-types": "off",
      "no-extra-boolean-cast": "off",
      "react/no-unescaped-entities": "off"
    }
}
